{
    "title": "Panoramas",
    "description": "Simple panorama viewer and editor",
    "introduction": [
        "This project is a simple tool for visualizing, editing and converting panoramas.",
        "It supports skysphere, skybox and tiny planet formats, and can convert from one another."
    ],
    "githubProjectName": "panoramas-webgl",
    "additionalLinks": [],
    "scriptFiles": [
        "script/main.js"
    ],
    "indicators": [],
    "canvas": {
        "width": 768,
        "height": 512,
        "enableFullscreen": true
    },
    "controlsSections": [
        {
            "title": "Input",
            "controls": [
                {
                    "type": "tabs",
                    "group": "input-format",
                    "unique": true,
                    "options": [
                        {
                            "value": "skybox",
                            "label": "Skybox"
                        },
                        {
                            "value": "skysphere",
                            "label": "Skysphere",
                            "checked": true
                        },
                        {
                            "value": "tinyplanet",
                            "label": "Tiny planet"
                        }
                    ]
                },
                {
                    "type": "file-upload",
                    "id": "file-upload-id",
                    "defaultMessage": "Choose an image...",
                    "accept": [
                        "image/bmp",
                        "image/png",
                        "image/jpeg"
                    ]
                }
            ]
        },
        {
            "title": "Ouput",
            "controls": [
                {
                    "type": "tabs",
                    "group": "output-format",
                    "unique": true,
                    "options": [
                        {
                            "value": "skybox",
                            "label": "Skybox",
                            "checked": true
                        },
                        {
                            "value": "skysphere",
                            "label": "Skysphere"
                        },
                        {
                            "value": "tinyplanet",
                            "label": "Tiny planet"
                        }
                    ]
                },
                {
                    "title": "Preview",
                    "type": "checkbox",
                    "id": "output-preview-id",
                    "checked": false
                },
                {
                    "title": "Quality",
                    "type": "tabs",
                    "group": "output-quality",
                    "unique": true,
                    "options": [
                        {
                            "value": "25",
                            "label": "25 %"
                        },
                        {
                            "value": "50",
                            "label": "50 %"
                        },
                        {
                            "value": "100",
                            "label": "100 %",
                            "checked": true
                        }
                    ]
                },
                {
                    "type": "file-download",
                    "id": "file-download-id",
                    "label": "Download",
                    "flat": true
                }
            ]
        },
        {
            "title": "Display",
            "controls": [
                {
                    "title": "Field of view",
                    "type": "range",
                    "id": "fov-range-id",
                    "min": 15,
                    "max": 110,
                    "value": 70,
                    "step": 1
                },
                {
                    "title": "Frame",
                    "type": "checkbox",
                    "id": "frame-checkbox-id",
                    "checked": false
                }
            ]
        },
        {
            "title": "Edit",
            "controls": [
                {
                    "title": "Pad top",
                    "type": "range",
                    "id": "padding-top-range-id",
                    "min": 0,
                    "max": 1,
                    "value": 0,
                    "step": 0.01
                },
                {
                    "title": "Pad bottom",
                    "type": "range",
                    "id": "padding-bottom-range-id",
                    "min": 0,
                    "max": 1,
                    "value": 0,
                    "step": 0.01
                },
                {
                    "title": "Pad back",
                    "type": "range",
                    "id": "padding-back-range-id",
                    "min": 0,
                    "max": 5,
                    "value": 0,
                    "step": 0.01
                },
                {
                    "title": "Flip vertically",
                    "type": "checkbox",
                    "id": "flip-vertically-checkbox-id",
                    "checked": false
                }
            ]
        }
    ]
}